{
	"[python]": {
		"editor.defaultFormatter": "charliermarsh.ruff",
	},
	"files.exclude": {
		".coverage": true,
		".git/": true,
		".vscode/": false,
		"**/__pycache__/": true,
		"**/.mypy_cache/": true,
		"**/.pytest_cache/": true,
		"**/*.exe": true,
		"**/*.lock": true,
		"**/lcov.info": true,
		"build/": true,
		"dist/": true,
		"sources/": true,
		"src/assets/": true,
		"src/icon.ico": true,
	},
	"python.testing.autoTestDiscoverOnSaveEnabled": true,
	"python.testing.cwd": "${workspaceFolder}",
	"python.testing.pytestEnabled": true,
	"python.testing.unittestEnabled": false,
	"[markdown]": {
		"files.trimTrailingWhitespace": false,
	},
	"todo-tree.tree.scanMode": "workspace only",
	"todo-tree.general.tags": [
		"BUG:",
		"HACK:",
		"TODO:",
		"GUI:",
		"F4SE:",
		"Scanner:",
		"Overview:",
		"Errors:",
		"Conflicts:",
		"Suggestions:",
		"Tools:",
		"Settings:",
		"About:",
	],
	"todo-tree.highlights.useColourScheme": true,
	"todo-tree.highlights.foregroundColourScheme": [
		"Black", // BUG:
		"Black", // HACK:
		"Black", // TODO:
		"White", // GUI:
		"White", // F4SE:
		"White", // Scanner:
		"White", // Overview:
		"White", // Errors:
		"White", // Conflicts:
		"Sienna", // Suggestions:
		"Thistle", // Tools:
		"Black", // Settings:
		"Purple", // About:
	],
	"todo-tree.highlights.backgroundColourScheme": [
		"White", // BUG:
		"White", // HACK:
		"White", // TODO:
		"DodgerBlue", // GUI:
		"Green", // F4SE:
		"Maroon", // Scanner:
		"Teal", // Overview:
		"Red", // Errors:
		"OrangeRed", // Conflicts:
		"Gold", // Suggestions:
		"Indigo", // Tools:
		"PeachPuff", // Settings:
		"Orchid", // About:
	],
	"python-envs.pythonProjects": [
		{
			"path": "",
			"envManager": "ms-python.python:poetry",
			"packageManager": "ms-python.python:poetry"
		}
	],
}